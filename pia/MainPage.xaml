<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pia.MainPage"
             BackgroundColor="White"
             Padding="30">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">

        <!-- Título -->
        <Label Text="Login"

               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" FontFamily="Helvetica"/>

        <!-- Usuario -->
        <Label Text="Usuario:"
               FontSize="24"
               />
        <Entry TextColor="Black"/>

            <!-- Contraseña -->
        <Label Text="Contraseña:"
               FontSize="24"
               />
        <Entry IsPassword="True" TextColor="Black"/>

        <!-- Botón Iniciar Sesión -->
        <Button Text="Iniciar sesión"
                FontSize="18"  
                TextColor="Black"
                BorderColor="Gray"
                BorderWidth="3"
                BackgroundColor="White"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"/>

        <!-- Botón Registrarse -->
        <Button Text="Registrarse"
                FontSize="18"
                TextColor="Black"
                BackgroundColor="White"
                BorderWidth="3"
                BorderColor="Gray"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"/>

        <!-- Olvidaste la contraseña -->
        <Label Text="¿Olvidaste la contraseña?"
               FontSize="18"
               TextColor="Blue"
               HorizontalOptions="Center"/>

        <!-- Redes Sociales -->
        <Label Text="Ingresa con:" FontSize="16" HorizontalOptions="Center"/>
        <Image Source="facebook_icon.png"
               WidthRequest="40"
               HeightRequest="40"
               HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>

